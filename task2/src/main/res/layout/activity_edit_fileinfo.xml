<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.task2.NewActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp"
    android:background="@drawable/index">

    <EditText
        android:id="@+id/edtName"
        android:layout_width="344dp"
        android:layout_height="44dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rect_shape"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteY="10dp" />



    <EditText
        android:id="@+id/edtData"
        android:layout_width="372dp"
        android:layout_height="362dp"
        android:ems="10"
        android:gravity="top"
        android:hint="Start Typing.."
        android:inputType="textPersonName"
        app:layout_constraintLeft_toLeftOf="@+id/edtName"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/edtName" />

    <ImageView
        android:id="@+id/imgBack2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@+id/edtData" />

    <ImageView
        android:id="@+id/imgSave2"
        android:layout_width="70dp"
        android:layout_height="63dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="11dp"
        android:src="@drawable/ic_check"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtData" />

    <ImageView
        android:id="@+id/imgDelete"
        android:layout_width="63dp"
        android:layout_height="65dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="11dp"
        android:background="@drawable/circle"
        android:src="@drawable/ic_delete_black_24dp"
        app:layout_constraintLeft_toRightOf="@+id/imgBack2"
        app:layout_constraintRight_toLeftOf="@+id/imgSave2"
        app:layout_constraintTop_toBottomOf="@+id/edtData"
        app:layout_constraintHorizontal_bias="0.507" />

</android.support.constraint.ConstraintLayout>

